<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/tools">
    <item android:state_checked="true">
        <shape>
            <solid android:color="@color/accent_color" />
            <corners android:radius="8dp" />
            <stroke android:width="2dp" android:color="@color/primary_color" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/surface_color" />
            <corners android:radius="8dp" />
            <stroke android:width="1dp" android:color="@color/divider_color" />
        </shape>
    </item>
</selector>