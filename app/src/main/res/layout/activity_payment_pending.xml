<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginBottom="24dp"
        android:src="@drawable/ic_pending"
        android:int="@color/status_pending" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pago Pendiente"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/status_pending"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tu pago estÃ¡ siendo procesado. Te notificaremos cuando se confirme."
        android:textSize="16sp"
        android:textColor="@color/text_secondary"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <TextView
        android:id="@+id/textViewPaymentId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID de pago: 123456789"
        android:textSize="14sp"
        android:textColor="@color/text_primary"
        android:layout_marginBottom="24dp"
        android:padding="12dp"
        android:background="@drawable/bg_payment_info_card" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonContinue"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Entendido" />

</LinearLayout>